<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="autoCompleteTextViewStyle">@style/CustomAutoCompleteStyle</item>
    </style>

    <style name="SdkTheme" parent="@style/BaseTheme" />

    <style name="PaymentOptionButton">
        <item name="android:clickable">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">@dimen/margin_10</item>
        <item name="android:paddingBottom">@dimen/margin_10</item>
        <item name="android:padding">@dimen/margin_16</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomAutoCompleteStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor_instamojo</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/separator_color</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>
